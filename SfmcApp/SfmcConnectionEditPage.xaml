<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SfmcApp.SfmcConnectionEditPage"
             Title="SfmcConnectionEditPage">
    
    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">

            <Entry x:Name="SubdomainEntry" Placeholder="Subdomain" />
            <Entry x:Name="ClientIdEntry" Placeholder="Client ID" />
            <Entry x:Name="ClientSecretEntry" Placeholder="Client Secret" IsPassword="true" />
            <Entry x:Name="MemberIdEntry" Placeholder="Member ID" />

            <Button Text="Save Settings" Clicked="OnSaveClicked" />
        </VerticalStackLayout>
    </ScrollView>
        
</ContentPage>