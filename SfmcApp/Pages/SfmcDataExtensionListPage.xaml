<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             x:Class="SfmcApp.Pages.SfmcDataExtensionListPage"
             Title="SfmcDataExtensionListPage">
    <VerticalStackLayout>
        <Label 
            Text="Data Extension Folders!"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />


        <Grid ColumnDefinitions="* , 2*" RowDefinitions="*">
            <CollectionView
                        Grid.Column="0"
                        ItemsSource="{Binding Folders}"
                        SelectionMode="Single"
                        SelectedItem="{Binding SelectedFolder}">
                        >
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <toolkit:Expander>
                            <!-- Folder -->
                            <toolkit:Expander.Header>
                                <HorizontalStackLayout Spacing="5">
                                    <Image Source="folder_icon.png" HeightRequest="20" WidthRequest="20" />
                                    <Label Text="{Binding Name}" FontAttributes="Bold" />
                                </HorizontalStackLayout>
                            </toolkit:Expander.Header>

                            <!-- Subfolders -->
                            <VerticalStackLayout Padding="20,0,0,0">
                                <CollectionView ItemsSource="{Binding SubFolders}">
                                    <CollectionView.ItemTemplate>
                                        <DataTemplate>
                                            <toolkit:Expander>
                                                <toolkit:Expander.Header>
                                                    <HorizontalStackLayout Spacing="5">
                                                        <Image Source="folder_icon.png" HeightRequest="18" WidthRequest="18" />
                                                        <Label Text="{Binding Name}" />
                                                    </HorizontalStackLayout>
                                                </toolkit:Expander.Header>

                                                <!-- (Optional) Recursive subfolders -->
                                                <VerticalStackLayout Padding="20,0,0,0">
                                                    <CollectionView ItemsSource="{Binding SubFolders}">
                                                        <CollectionView.ItemTemplate>
                                                            <DataTemplate>
                                                                <HorizontalStackLayout Spacing="5">
                                                                    <Image Source="folder_icon.png" HeightRequest="18" WidthRequest="18" />
                                                                    <Label Text="{Binding Name}" />
                                                                </HorizontalStackLayout>
                                                            </DataTemplate>
                                                        </CollectionView.ItemTemplate>
                                                    </CollectionView>
                                                </VerticalStackLayout>
                                            </toolkit:Expander>
                                        </DataTemplate>
                                    </CollectionView.ItemTemplate>
                                </CollectionView>
                            </VerticalStackLayout>
                        </toolkit:Expander>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

            <!-- Right Column -->
            <CollectionView Grid.Column="1"
                            ItemsSource="{Binding DataExtensions}">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Grid ColumnDefinitions="2*, 1*, 3*"
                              Padding="10">
                            <Label Grid.Column="0" Text="{Binding Name}" />
                            <Label Grid.Column="1" Text="{Binding Description}" />
                            <Label Grid.Column="2" Text="{Binding IsSendable}" />
                            <Label Grid.Column="3" Text="{Binding CustomerKey}" />
                        </Grid>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

        </Grid>
    </VerticalStackLayout>
</ContentPage>