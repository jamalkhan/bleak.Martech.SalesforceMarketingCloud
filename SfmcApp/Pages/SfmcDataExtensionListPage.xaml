<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             x:Class="SfmcApp.Pages.SfmcDataExtensionListPage"
             Title="SfmcDataExtensionListPage">
    <VerticalStackLayout>
        <Label 
            Text="Data Extension Folders!"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />

            <CollectionView ItemsSource="{Binding Folders}">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <toolkit:Expander>
                            <toolkit:Expander.Header>
                                <Label Text="{Binding Name}" FontAttributes="Bold" />
                            </toolkit:Expander.Header>

                            <VerticalStackLayout Padding="10,0,0,0">
                                <CollectionView ItemsSource="{Binding SubFolders}">
                                    <CollectionView.ItemTemplate>
                                        <DataTemplate>
                                            <Label Text="{Binding Name}" />
                                        </DataTemplate>
                                    </CollectionView.ItemTemplate>
                                </CollectionView>
                            </VerticalStackLayout>

                        </toolkit:Expander>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
    </VerticalStackLayout>
</ContentPage>