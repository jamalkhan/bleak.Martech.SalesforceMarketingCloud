<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             xmlns:local="clr-namespace:SfmcApp.Pages.Assets"
             xmlns:viewmodels="clr-namespace:SfmcApp.Models.ViewModels"
             xmlns:converters="clr-namespace:SfmcApp.Converters"
             x:Class="SfmcApp.Pages.Assets.SfmcAssetListPage"
             Title="{Binding Title}">
    <ContentPage.Resources>
        <DataTemplate x:Key="FolderTemplate">
            <toolkit:Expander>
                <toolkit:Expander.Header>
                    <HorizontalStackLayout Spacing="5">
                        <Image Source="folder_icon.png" HeightRequest="18" WidthRequest="18" />
                        <Label Text="{Binding Name}">
                            <Label.GestureRecognizers>
                                <TapGestureRecognizer
                                    Command="{Binding Source={RelativeSource AncestorType={x:Type local:SfmcAssetListPage}}, Path=BindingContext.FolderTappedCommand}"
                                    CommandParameter="{Binding .}" />
                            </Label.GestureRecognizers>
                        </Label>
                    </HorizontalStackLayout>
                </toolkit:Expander.Header>

                <VerticalStackLayout Padding="20,0,0,0">
                    <CollectionView ItemsSource="{Binding SubFolders}"
                                    ItemTemplate="{StaticResource FolderTemplate}" />
                </VerticalStackLayout>
            </toolkit:Expander>
        </DataTemplate>
    </ContentPage.Resources>
   <Grid 
        ColumnDefinitions="*, 2*"
        RowDefinitions="Auto, *"
        VerticalOptions="FillAndExpand"        
        >

        <!-- Header -->
        <Grid
            Grid.Row="0"
            ColumnSpacing="10"
            RowSpacing="5"
            Padding="10"
            HorizontalOptions="StartAndExpand"
            VerticalOptions="Center">

            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <!-- Row 0 -->
            <HorizontalStackLayout Grid.Row="0" Spacing="10" VerticalOptions="Center">
                <SearchBar
                    Placeholder="Search Assets"
                    WidthRequest="200"
                    x:Name="SearchBarText"
                    VerticalOptions="Center"
                    BackgroundColor="White"
                    TextColor="Black"
                    PlaceholderColor="Gray"
                    HeightRequest="40" />
                
                <Picker
                    Title="Select Search Type"
                    WidthRequest="150"
                    ItemsSource="{Binding SearchOptions}"
                    SelectedItem="{Binding SelectedSearchOption}"
                    x:Name="SearchTypePicker"
                    SelectedIndex="0"
                    VerticalOptions="Center" />
                
                <Button
                    Text="Search"
                    VerticalOptions="Center"
                    Command="{Binding SearchCommand}" />
            </HorizontalStackLayout>

            <!-- Row 1 -->
            <HorizontalStackLayout Grid.Row="1" Spacing="5" VerticalOptions="Center">
                <Label Text="Selected SFMC Folder:" FontSize="Medium" FontAttributes="Bold" VerticalOptions="Center" />
                <Label Text="{Binding SelectedFolderName}" FontSize="Medium" FontAttributes="Bold" VerticalOptions="Center" />

                <Label Text="Folders:" FontSize="Medium" FontAttributes="Bold" VerticalOptions="Center" />
                <Label Text="{Binding Folders.Count}" FontSize="Medium" FontAttributes="Bold" VerticalOptions="Center" />
                
                <Label Text="Assets:" FontSize="Medium" FontAttributes="Bold" VerticalOptions="Center" />
                <Label Text="{Binding ContentResources.Count}" FontSize="Medium" FontAttributes="Bold" VerticalOptions="Center" />
            </HorizontalStackLayout>

            <!-- Row 2 -->
            <Grid Grid.Row="2" ColumnSpacing="10" VerticalOptions="Center">
                <!-- Define 5 columns: Label | Editor | Button | Label | Switch -->
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <!-- Download Folder Label -->
                <Label 
                    Grid.Column="0"
                    Text="Download Folder:" 
                    FontSize="Medium" 
                    FontAttributes="Bold" 
                    VerticalOptions="Center" />

                <!-- Read-only Editor (for displaying folder path) -->
                <Editor
                    Grid.Column="1"
                    Text="{Binding DownloadDirectory}"
                    IsReadOnly="True"
                    FontSize="Small"
                    VerticalOptions="Center"
                    BackgroundColor="#f0f0f0"
                    TextColor="Black"
                    AutoSize="TextChanges"
                    HeightRequest="40"
                    HorizontalOptions="FillAndExpand"
                    />

                <!-- Open Button -->
                <Button
                    Grid.Column="2"
                    Text="Open"
                    Command="{Binding OpenDownloadDirectoryCommand}"
                    VerticalOptions="Center" />

                <!-- Expand Ampscript Label -->
                <Label 
                    Grid.Column="3"
                    Text="Expand Ampscript:" 
                    FontSize="Medium" 
                    FontAttributes="Bold" 
                    VerticalOptions="Center" />

                <!-- Switch -->
                <Switch 
                    Grid.Column="4"
                    IsToggled="{Binding ExpandAmpscript, Mode=TwoWay}" 
                    VerticalOptions="Center" />
            </Grid>
            
        </Grid>



        <!-- Left Column -->
        <Border 
            Grid.Row="1"
            Grid.Column="0"
            Stroke="Gray"
            StrokeThickness="1"
            BackgroundColor="White"
            Padding="5"
            Margin="10"
            StrokeShape="RoundRectangle 8"
            >
            <Grid>
                 <Image Source="spinner.gif"
                       WidthRequest="40"
                       HeightRequest="40"
                       HorizontalOptions="Center"
                       VerticalOptions="Center"
                       IsVisible="{Binding IsFoldersLoading}" />
                <CollectionView
                    ItemsSource="{Binding Folders}"
                    SelectionMode="Single"
                    SelectedItem="{Binding SelectedFolder}"
                    IsVisible="{Binding IsFoldersLoaded}"
                    ItemTemplate="{StaticResource FolderTemplate}">
                </CollectionView>
            </Grid>
        </Border>

        <!-- Right Column -->
        <Border 
            Grid.Row="1"
            Grid.Column="1"
            Stroke="Gray"
            StrokeThickness="1"
            BackgroundColor="White"
            Padding="5"
            Margin="10"
            StrokeShape="RoundRectangle 8"
            >
            <CollectionView
                ItemsSource="{Binding ContentResources}"
                IsVisible="{Binding IsContentResourcesLoaded}"
                >
                <CollectionView.ItemsLayout>
                    <LinearItemsLayout Orientation="Vertical" ItemSpacing="20" />
                </CollectionView.ItemsLayout>
                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="viewmodels:AssetViewModel">
                        <Border 
                            Stroke="LightGray" 
                            StrokeThickness="1" 
                            Margin="10,20,10,20" 
                            Padding="4" 
                            StrokeShape="RoundRectangle 4">

                            <Grid ColumnDefinitions="Auto, *, Auto, Auto"
                                RowDefinitions="Auto, Auto, Auto, Auto"
                                Padding="10"
                                ColumnSpacing="10"
                                VerticalOptions="Center">

                                <!-- lemon.gif spanning 3 rows -->
                                <Image Grid.RowSpan="3"
                                    Grid.Column="0"
                                    Source="{Binding Icon}"
                                    WidthRequest="60"
                                    HeightRequest="60"
                                    VerticalOptions="Center" />

                                <!-- Name in big text -->
                                <Label Grid.Column="1"
                                    Grid.Row="0"
                                    Text="{Binding Name}"
                                    FontSize="20"
                                    FontAttributes="Bold"
                                    VerticalOptions="Center" />

                                <!-- Customer Key -->
                                <HorizontalStackLayout
                                    Grid.Column="1"
                                    Grid.Row="1"
                                    VerticalOptions="Center">
                                    <Grid ColumnDefinitions="Auto, *, Auto, Auto"
                                        RowDefinitions="Auto, Auto"
                                        Padding="5"
                                        VerticalOptions="Center">
                                        <Label Text="Customer Key: " Grid.Row="0" Grid.Column="0"  />
                                        <Label Text="{Binding CustomerKey}" Grid.Row="0" Grid.Column="1" />
                                        <Label Text="ID: " Grid.Row="0" Grid.Column="2" />
                                        <Label Text="{Binding Id}" Grid.Row="0" Grid.Column="3" />
                                        <Label Text="Type: " Grid.Row="1" Grid.Column="0" />
                                        <Label Text="{Binding AssetType.Name}" Grid.Row="1" Grid.Column="1" />

                                        <!--<Label Text="ContentType: " Grid.Row="1" Grid.Column="2" IsVisible="{Binding ContentTypeVisible}" />
                                        <Label Text="{Binding ContentType}" Grid.Row="1" Grid.Column="3" />-->
                                    </Grid>
                                </HorizontalStackLayout>

                                <!-- Description -->
                                <Label Grid.Column="1"
                                    Grid.Row="2"
                                    Text="{Binding Description}"
                                    VerticalOptions="Center" />

                                <!-- TODO: do something with this -->
                                <Image Grid.Column="2"
                                    Grid.RowSpan="4"
                                    Source="mail.png"
                                    WidthRequest="30"
                                    HeightRequest="30"
                                    VerticalOptions="Center"
                                    HorizontalOptions="End"
                                    IsVisible="false"
                                    SemanticProperties.Description="Is Sendable = true" />

                                <Image Grid.Column="3"
                                    Grid.RowSpan="4"
                                    Source="download.png"
                                    WidthRequest="30"
                                    HeightRequest="30"
                                    VerticalOptions="Center"
                                    HorizontalOptions="End"
                                    IsVisible="{Binding IsDownloadableImage}"
                                    SemanticProperties.Description="Download Image">
                                    <Image.GestureRecognizers>
                                        <TapGestureRecognizer
                                            Command="{Binding BindingContext.DownloadCommand, Source={RelativeSource AncestorType={x:Type local:SfmcAssetListPage}}}"
                                            CommandParameter="{Binding .}" />
                                    </Image.GestureRecognizers>
                                </Image>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </Border>
    </Grid>
</ContentPage>